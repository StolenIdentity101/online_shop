package final_project;

import java.util.ArrayList;
import java.util.Scanner;

class CreateAccount {
	public static void Account(String[] args) { // This is the function that will allow people to either log in to their current account or they will be able to create a new account.
		Scanner input = new Scanner(System.in);
		
		System.out.println("Do you have an account? If so, enter in 1 to log-in. \n If you need to create an account, enter 2 to create an account.");
		if (input == 1)
		System.out.println(Login);
		// The purpose of this if statement is to ask the user to input different numbers that would lead them into either the Log in or create a new account with the details below. 
		else (input == 2)
		System.out.println(CreateAccount);
		
	}
	
	public static void CreateAccount(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter in a users ID. ");
